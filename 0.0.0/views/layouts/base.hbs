<!doctype html>
<html lang="en">
  <head>
    {{>head}}
    <link rel="stylesheet" href="/stylesheets/styles.css"></link>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">{{project.name}}</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="{{#equalsClass project.active 'users' 'active'}}{{/equalsClass}}">
              <a href="/users">Users</a></li>
            <li class="{{#equalsClass project.active 'accounts' 'active'}}{{/equalsClass}}">
              <a href="/accounts">Accounts</a></li>
            <li class="{{#equalsClass project.active 'transactions' 'active'}}{{/equalsClass}}">
              <a href="/transactions">Transactions</a></li>
            <li class="{{#equalsClass project.active 'reports' 'active'}}{{/equalsClass}}">
              <a href="/reports">Reports</a></li>
          </ul>
        </div>
        <!--/.nav-collapse -->
      </div>
    </nav>


    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12 col-md-12 main">
          <h1 class="page-header">{{title}}</h1>
        </div>
      </div>
      {{{body}}}
    </div>
    {{>footer}}
  </body>
</html>
